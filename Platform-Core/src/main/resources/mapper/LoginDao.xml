<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jwzhu.platform.core.user.db.LoginDao">
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into Login
        <trim prefix="(" suffixOverrides="," suffix=")">
            <if test="username != null">
                username,
            </if>
            <if test="password != null">
                `password`,
            </if>
            <if test="userType != null">
                userType,
            </if>
            <if test="userId != null">
                userId,
            </if>
            <if test="createTime != null">
                createTime,
            </if>
            <if test="status != null">
                `status`,
            </if>
            <if test="salt != null">
                salt,
            </if>
        </trim>
        <trim prefix="values(" suffixOverrides="," suffix=")">
            <if test="username!= null">
                #{username},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="userType != null">
                #{userType},
            </if>
            <if test="userId != null">
                #{userId},
            </if>
            <if test="createTime != null">
                #{createTime},
            </if>
            <if test="status != null">
                #{status},
            </if>
            <if test="salt != null">
                #{salt},
            </if>
        </trim>
    </insert>
    <select id="getByUsername" resultType="com.jwzhu.platform.core.user.model.Login">
        select id, username, `password`, userType, userId, createTime, updateTime, `status`, salt
        from Login
        where username = #{username}
    </select>
</mapper>